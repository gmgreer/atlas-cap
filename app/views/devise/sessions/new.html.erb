<div class='flex flex-col gap-6 justify-center items-center min-h-screen bg-base p-6 '>

<h2 class="text-lg font-medium mb-4 text-white">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field mb-4">
    <%= f.label :email, class: "block text-sm font-medium leading-5 text-white" %><br />
    <%= f.email_field :email, class: "form-input py-3 px-4 leading-5 rounded-xl transition duration-150 ease-in-out", autofocus: true, autocomplete: "email" %>
  </div>


  <div class="field mb-4">
    <%= f.label :password, class: "block text-sm font-medium leading-5 text-white" %><br />
    <%= f.password_field :password, class: "form-input py-3 px-4 leading-5 rounded-xl transition duration-150 ease-in-out", autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field mb-4">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class: "text-sm font-medium leading-5 text-white" %>
    </div>
  <% end %>

  <div class="actions flex justify-between">
    <%= f.submit "Log in", class: "bg-base hover:bg-sky-800 pointer text-white font-medium py-2 px-4 rounded-md" %>
  </div>
<% end %>
<div class='flex justify-end gap-2'>
 <%= render "devise/shared/links" %>
</div>
</div>